                                            <TextBlock  HorizontalAlignment="Left" 
                                                   FontSize="14" Foreground="#121518" FontWeight="Normal">
                                                <Run Text="от "/>
                                                <Run Text="{Binding MinPrise}"/>
                                            </TextBlock>

                                            <TextBlock  HorizontalAlignment="Right" 
                                                   FontSize="14" Foreground="#121518" FontWeight="Normal">
                                                <Run Text="    до "/>
                                                <Run Text="{Binding MaxPrise}" />

                                            </TextBlock>
                                        </StackPanel>

